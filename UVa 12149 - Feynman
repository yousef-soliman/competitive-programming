	using namespace std;
	typedef long long ll;


	int main() {
		int N;
		while(cin >> N && N) { 
			int res = N*N;
			for(int i = 2; i < N;i++) {
				res += (i) * (i);
			}
			if(N!=1) {
				res += 1;
			}
			cout << res << endl;
		}
		
		return 0;
	}


