	using namespace std;
	typedef long long ll;


	int main() {
		ll N;
		int T;
		cin >> T;
		while(T--) {
			cin >> N;
			int res = ((-1.0/4) + sqrt((1.0/16) + (.5*N))) / (.5);
			cout << res << endl;
		}
		
		
		return 0;
	}


